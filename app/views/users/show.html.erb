<h1>My Account</h1>

<%= form_for @user, url: user_path(@user), method: :patch do |form| %>

  <table>
    <tr>
      <td><%= form.label :name %></td>
      <td><%= form.text_field :name %></td>
    </tr>

    <tr>
      <td><%= form.label :email %></td>
      <td><%= form.email_field :email %></td>
    </tr>

    <tr>
      <td><%= form.label "New Password:" %></td>
      <td><%= form.password_field :password %></td>
    </tr>
  </table><br>

  <%= form.submit "Edit Account" %>

<% end %>
