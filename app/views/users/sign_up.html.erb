<h1>Sign Up</h1>

<%= form_for :user, url: '/users/sign_up', method: :post do |form| %>

  <table>
    <tr>
      <td><%= form.label :name %></td>
      <td><%= form.text_field :name %></td>
    </tr>

    <tr>
      <td><%= form.label :email %></td>
      <td><%= form.email_field :email %></td>
    </tr>

    <tr>
      <td><%= form.label :password %></td>
      <td><%= form.password_field :password %></td>
    </tr>
  </table><br>

<%= form.submit "Sign Up" %>

<% end %>

<h4>Already have an account? <%= link_to("Log In!", user_log_in_path) %></h4>
