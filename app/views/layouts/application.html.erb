<!DOCTYPE html>
<html>

  <head>
    <title>RailsProject</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all' %>
  </head>

  <header>
    <nav>
      <% if !current_user %>
        <%= link_to("Log In", user_log_in_path) %>
      <% else %>
        <%= link_to("My Account", user_path(current_user)) %>
      <% end %>
    </nav>

    <%= content_tag(:div, flash[:message], :id => "flash_message") if flash[:message] %>
  </header>

  <body>
    <%= yield %>
  </body>

</html>
